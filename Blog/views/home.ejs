<%- include("partials/header") -%>

<h1>Home</h1>
<p><%=HOMECONTENT%></p>
<hr>
<div class="blogs">
<% BLOGCONTENT.forEach(function(item){ %>
    <div class="post-content">
        <% if (item.image.mimeType === "image/jpeg" ) { %>
            <img class="post-content-img" src="<%= item.image.imageUrl %>" alt="">
          <% }else{ %>
            <video class="post-content-vid" src="<%= item.image.imageUrl %>" autoplay muted loop ></video>
          <% } %>
        <h3><%=item.title %></h3>
        <p><%=item.content.substring(0,140) + "..." %><a href="/posts/<%=item._id%>">Read more</a></p>
    </div>
<% }) %>
</div>

<%- include("partials/footer") -%>